        <div class="form-error">{{ form_errors(form.email) }}</div>
    </div>
    <div class="input-field">
        {{ form_widget(form.email_confirm) }}
        {{ form_label(form.email_confirm) }}
        <div class="form-error">{{ form_errors(form.email_confirm) }}</div>
    </div>
</div>
{{ form_end(form) }}
